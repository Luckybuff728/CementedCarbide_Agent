# ============================================
# TopMat Agent 后端 Dockerfile (精简版)
# ============================================

# 第一阶段: 构建环境
FROM python:3.11-slim AS builder

WORKDIR /app

# 安装构建依赖
RUN apt-get update && \
    apt-get install -y --no-install-recommends gcc && \
    rm -rf /var/lib/apt/lists/*

# # 配置 pip 国内镜像源（加速安装）
# RUN pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple && \
#     pip config set global.timeout 300

# 复制依赖文件
COPY requirements.txt .

# 安装Python依赖到指定目录（增加超时和重试）
RUN pip install --no-cache-dir --user --timeout 300 --retries 5 -r requirements.txt

# ============================================
# 第二阶段: 运行环境
FROM python:3.11-slim

WORKDIR /app

# 创建非root用户
RUN useradd -m -u 1000 topmat && \
    chown -R topmat:topmat /app

# 从构建阶段复制Python包
COPY --from=builder /root/.local /home/topmat/.local

# 复制应用代码
COPY --chown=topmat:topmat src/ ./src/
COPY --chown=topmat:topmat run.py .
COPY --chown=topmat:topmat .env.example .

# 复制VTK数据文件
COPY --chown=topmat:topmat 涂层-调幅分解/ ./涂层-调幅分解/
COPY --chown=topmat:topmat conc-0.vtk ./conc-0.vtk

# 设置环境变量
ENV PATH=/home/topmat/.local/bin:$PATH \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# 切换到非root用户
USER topmat

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/health')" || exit 1

# 暴露端口
EXPOSE 8000

# 启动命令
CMD ["python", "-m", "uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "2"]
